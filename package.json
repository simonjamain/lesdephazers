{
	"name": "phaser_gj_confitours",
	"version": "1.0.0",
	"description": "elconfitour",
	"scripts": {
		"parcelBuild": "parcel build --no-source-maps ./src/index.html --out-dir ./dist",
		"parcelDev": "parcel build --no-minify  ./src/index.html --out-dir ./dist",
		"syncAssets": "sync-glob -d 'src/assets/**/*' dist/assets",
		"syncCss": "sync-glob -d 'src/css/*.css' dist/css",
		"sync": "npm-run-all -p cp syncCss syncAssets",
		"cp": "copyfiles -f ./src/*.html ./src/.htaccess ./src/*.txt ./src/*.md ./dist",
		"del": "del-cli dist/*",
		"browserSync": "browser-sync 'dist'",
		"watch": "npm-watch",
		"build": "npm-run-all del sync parcelBuild",
		"dev": "npm-run-all del sync parcelDev",
		"start": "npm-run-all -p browserSync watch"
	},
	"author": "pil",
	"license": "MIT",
	"repository": {
		"url": ""
	},
	"devDependencies": {
		"browser-sync": "^2.26.12",
		"chokidar": "^3.4.2",
		"copyfiles": "^2.3.0",
		"core-js": "^3.6.5",
		"del-cli": "^3.0.1",
		"eslint": "^7.7.0",
		"npm-run-all": "^4.1.5",
		"npm-watch": "^0.7.0",
		"parcel-bundler": "^1.12.4",
		"poetic": "^1.5.0",
		"sync-glob": "^1.4.0",
		"tile-extruder": "^2.0.6"
	},
	"dependencies": {
		"phaser": "^3.24.1"
	},
	"watch": {
		"dev": {
			"patterns": [
				"./src"
			],
			"extensions": "html, js, css, ttf, jpg, jpeg, png, gif, json"
		}
	},
	"browserslist": [
		"last 1 version",
		"last 5 Firefox versions",
		"last 5 Chrome versions",
		"last 5 iOS versions",
		"not dead",
		"not IE 11 and > 0.5%"
	]
}
